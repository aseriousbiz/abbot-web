                    },
                    {
                      "type": "handlebars",
                      "attrs": {
                        "id": "trigger.outputs.customer.name",
                        "label": "Customer name from trigger"
                      }
                    },
                    {
                      "text": " accepted our invitation.",
                      "type": "text"
                    }
                  ]
                }
              ]
            }
          }
        },
        {
          "branches": {},
          "id": "slack_send_message",
          "type": "slack.send-message",
          "inputs": {
            "mrkdwn": {
              "type": "doc",
              "content": [
                {
                  "type": "paragraph",
                  "content": [
                    {
                      "type": "emoji",
                      "attrs": {
                        "id": "smile",
                        "label": "ðŸ˜„"
