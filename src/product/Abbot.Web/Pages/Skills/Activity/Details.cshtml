@page "/skills/{skill}/activity/{id}"
@model Serious.Abbot.Pages.Activity.DetailsModel

@{
    var skill = RouteData.Values["skill"];
    ViewContext.SetPageInfo("Skills", "Skill Activity Detail");
}

<div class="sm:flex items-start mx-1 my-2">
    <div class="border border-gray-200 bg-gray-100 mx-1 text-sm flex-grow-0 sm:w-1/4 mt-2 sm:mt-0 flex-shrink-0">
        <div class="border-b bg-white p-2">
            <header class="bg-blue-500 px-2">
                <h1 class="text-white">
                    Skill:
                    <span>@skill</span>
                </h1>
            </header>

            <nav>
                <ul class="m-2 font-mono" role="tablist">
                    <li class="mb-1">
                        <a class="text-blue-500 hover:text-gray-700"
                           asp-page="../Edit"
                           asp-route-skill="@skill">
                            Code
                        </a>
                    </li>

                    <li class="mb-1">
                        <a class="text-blue-500 hover:text-gray-700"
                           asp-page="Index"
                           asp-route-skill="@skill">
                            View activity
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    <div class="flex-grow">
        <section class="border border-gray-200 mx-1 mt-2 sm:mt-0">
            <header class="px-2 mt-2 mx-2 bg-blue-50">
                <h1 class="text-sm">
                    Details for activity
                    @Model.AuditEvent.Identifier
                </h1>
            </header>

            <div>
                <partial name="Shared/Activity/_DetailsPage" />
            </div>
        </section>
    </div>
</div>
