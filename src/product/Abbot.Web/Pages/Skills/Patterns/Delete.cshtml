@page "/skills/{skill}/patterns/{slug}/delete"
@model Serious.Abbot.Pages.Skills.Patterns.DeletePageModel
@{
    ViewContext.SetPageInfo("Patterns", "Pattern Delete", "Delete pattern");
}
<div class="border border-red-300 sm:w-96 m-8 bg-white shadow mx-auto">
    <header class="p-2">
        <h1 class="bg-red-500 text-white px-2">
            Delete pattern
            <span class="font-bold">@Model.PatternName</span>
            for skill
            <span class="font-bold">@Model.SkillName</span>?
        </h1>
    </header>

    <form class="p-2" method="post">
        <p class="mx-2">
            Deleting this pattern will immediately make this skill stop responding to it.
        </p>

        <div class="flex items-center mt-4">
            <skillbacklink class="btn"/>
            <button class="btn btn-danger ml-auto">Confirm Delete</button>
        </div>
    </form>
</div>
