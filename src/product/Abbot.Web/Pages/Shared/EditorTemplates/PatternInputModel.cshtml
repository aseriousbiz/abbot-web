@model Serious.Abbot.Pages.Skills.Patterns.PatternInputModel

<div class="mb-4">
    <div>
        <label class="form-label -mb-1" asp-for="Name"></label>
        <description asp-for="Name"></description>
    </div>

    <div>
        <input class="form-input w-full" asp-for="Name"/>
        <span asp-validation-for="Name"></span>
    </div>
</div>

<div class="mb-4">
    <div>
        <label class="form-label -mb-1" asp-for="PatternType"></label>
        <description asp-for="PatternType"></description>
    </div>

    <div class="relative flex items-center text-blue-500 hover:text-gray-700">
        <select class="appearance-none btn font-bold pr-8"
                asp-for="PatternType"
                asp-items="Html.GetEnumSelectList<PatternType>()"
                data-modal-listener-target="bind"
                data-bind-key="pattern-type">
            <option>Select pattern typeâ€¦</option>
        </select>
        <i class="fa-solid fa-caret-down -ml-6 pointer-events-none"></i>
    </div>
</div>

<div class="mb-4">
    <label class="form-label -mb-1" asp-for="Pattern"></label>
    <description asp-for="Pattern"></description>

    <div class="flex">
        <input class="form-input w-full"
               asp-for="Pattern"
               data-bind-key="pattern"
               data-modal-listener-target="bind" />
        <button class="btn ml-2 flex-shrink-0"
                data-action="modal-listener#open">Launch pattern builder</button>

    </div>
    <p><span asp-validation-for="Pattern"></span></p>
</div>

<div class="flex mb-4">
    <div class="w-1/2 mr-1">
        <div>
            <label class="font-bold" asp-for="CaseSensitive">
                <input asp-for="CaseSensitive"
                       data-modal-listener-target="bind"
                       data-bind-key="case-sensitive" />
                Case Sensitive
            </label>
        </div>
        <description asp-for="CaseSensitive"></description>
    </div>

    <div class="w-1/2 ml-1">
        <div>
            <label class="font-bold" asp-for="Enabled">
                <input asp-for="Enabled"/>
                Enabled
            </label>
        </div>
        <description asp-for="Enabled"></description>
    </div>
</div>
<div class="flex mb-4">
    <div class="w-1/2 ml-1">
        <div>
            <label class="font-bold" asp-for="AllowExternalCallers">
                <input asp-for="AllowExternalCallers"/>
                Match Messages from Supportees
            </label>
        </div>
        <description asp-for="AllowExternalCallers"></description>
    </div>
</div>
