@model Serious.Abbot.Pages.Skills.Subscriptions.SignalSubscriptionInputModel


<div class="mb-4">
    <div>
        <label class="form-label -mb-1" asp-for="Name">Signal Name</label>
        <description asp-for="Name"></description>
    </div>

    <div>
        <input class="form-input w-full" asp-for="Name"/>
        <span asp-validation-for="Name"></span>
    </div>
</div>

<round-box class="bg-gray-100">
    <h2 class="font-semibold text-lg">Arguments Pattern</h2>
    <small>
        Optional: Specify an arguments pattern if you want this subscription to only match signals with arguments that matches this pattern.
    </small>
    <div class="mb-4">
        <label class="form-label -mb-1" asp-for="Pattern"></label>
        <description asp-for="Pattern"></description>

        <div class="flex">
            <input class="form-input w-full" asp-for="Pattern" />
        </div>
        <p><span asp-validation-for="Pattern"></span></p>
    </div>

    <div class="flex mb-4">
        <div>
            <label class="form-label -mb-1" asp-for="PatternType">Arguments Pattern Type</label>
            <div class="relative flex items-center text-blue-500 hover:text-gray-700 mt-2">
                <select class="appearance-none btn font-bold pr-8"
                        asp-for="PatternType"
                        asp-items="Html.GetEnumSelectList<PatternType>()">
                    <option>Select pattern typeâ€¦</option>
                </select>
                <span asp-validation-for="PatternType"></span>
                <i class="fa-solid fa-caret-down -ml-6 pointer-events-none"></i>
            </div>
        </div>
        <div class="ml-5">
            <div>
                <label class="font-bold" asp-for="CaseSensitive">
                    <input asp-for="CaseSensitive" type="checkbox" />
                    Case Sensitive
                </label>
            </div>
            <description asp-for="CaseSensitive"></description>
            <span asp-validation-for="CaseSensitive"></span>
        </div>
    </div>
</round-box>
