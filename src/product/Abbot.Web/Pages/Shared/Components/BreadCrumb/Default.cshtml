@model IReadOnlyList<BreadCrumbItem>

@if (Model is {Count: > 0}) {
    <nav class="breadcrumb is-small-mobile" aria-label="breadcrumbs">
        <ul>
            @foreach (var item in Model) {
                var activeCss = item.Active ? "is-active" : null;
                var ariaCurrent = item.Active ? "page" : null;

                <li class="@activeCss">
                    <a href="@item.Href" aria-current="@ariaCurrent">
                        @if (!(item.IconName is null)) {
                            <span class="icon is-small">
                                <i class="fas @item.IconName" aria-hidden="true"></i>
                            </span>
                        }
                        <span>@item.Name</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
}