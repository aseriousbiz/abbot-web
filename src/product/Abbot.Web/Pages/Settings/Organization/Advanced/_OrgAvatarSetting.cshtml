@model IOrganizationAvatarViewModel

<div>
    <h3 class="text-xl font-semibold">Organization avatar</h3>

    <div class="flex mt-4">
        <img id="org-avatar-current" class="w-16 h-16 border-gray-300 border-4 rounded-full" src="@Model.Organization.Avatar" alt="The organization's avatar" />
        <div class="flex flex-col ml-3">
            <div class="font-semibold">@Model.Organization.Name</div>
            <p>
                This is only publicly visible when the organization publishes skills in the Package Directory.
            </p>

            <p class="text-sm">
                For best results, choose a 64x64 png image. jpg and jpeg are also supported. Max file size is 50kb.
            </p>
        </div>
    </div>

    <form class="relative mt-2" method="post" asp-page-handler="UploadOrgAvatar" enctype="multipart/form-data">
        <partial name="_AvatarUploadForm" model="Model.OrgAvatarInput"/>
    </form>
</div>
