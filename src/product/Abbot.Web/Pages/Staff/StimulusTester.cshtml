@page

@{
    ViewContext.SetPageInfo("Staff", "Staff Tools");
}

<h1 class="text-lg font-semibold leading-tight">Checkboxes Controller</h1>

<div class="sm:grid grid-cols-2">
    <div data-controller="checkboxes">
        <p>This example has a toggle all checkbox that reflects the state of the list.</p>
        <label>
            <input type="checkbox" data-checkboxes-target="toggle" />
            Toggle All <button type="button" data-checkboxes-target="action" class="btn btn-primary">Save</button> <button type="button" data-checkboxes-target="action" class="btn">Delete</button>
            <details data-checkboxes-target="action">
                <summary class="btn">Details "Button"</summary>
                <p>Details content</p>
            </details>
        </label>
        <hr/>
        <ul>
            <li>
                <label><input type="checkbox" data-checkboxes-target="item" /> One</label>
            </li>
            <li>
                <label><input type="checkbox" data-checkboxes-target="item" /> Two</label>
            </li>
            <li>
                <label><input type="checkbox" data-checkboxes-target="item" /> Three</label>
            </li>
            <li>
                <label><input type="checkbox" data-checkboxes-target="item" /> Four</label>
            </li>
        </ul>
    </div>

    <div data-controller="checkboxes" data-checkboxes-exclusive-value="true">
        <p>
            This example has an exclusive toggle. If any of the other checboxes are checked, this is unchecked. If
            this is checked, then the others are unchecked.
        </p>
        <label>
            <input type="radio" data-checkboxes-target="toggle"  />
            Use Defaults
        </label>
        <hr/>
        <ul>
            <li>
                <label><input type="checkbox" data-checkboxes-target="item" /> One</label>
            </li>
            <li>
                <label><input type="checkbox" data-checkboxes-target="item" /> Two</label>
            </li>
            <li>
                <label><input type="checkbox" data-checkboxes-target="item" /> Three</label>
            </li>
            <li>
                <label><input type="checkbox" data-checkboxes-target="item" /> Four</label>
            </li>
        </ul>
    </div>
</div>
