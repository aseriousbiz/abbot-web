@page "/playbooks/{slug}/delete"
@model Serious.Abbot.Pages.Playbooks.DeletePlaybookPage
@{
    ViewContext.SetPageInfo("Playbook", "Playbook", "Delete Playbook");
}

<page-header>
    <div class="flex items-center p-2 mb-4 sticky top-0 bg-gray-50">
        <a asp-page="Index">Playbooks</a>
        <span class="mx-1">/</span>
        Delete Playbook
    </div>
</page-header>


<page-body class="h-full">
    <form method="post" class="flex flex-col rounded-2xl border border-slate-300 bg-white p-4 gap-y-2 w-96 mx-auto">
        <div>
            Are you sure you want to delete the Playbook <strong>@Model.Playbook.Name</strong>?
        </div>
        
        <div class="mt-2">
            <button class="btn btn-primary btn-danger" type="submit">Delete Playbook</button>
        </div>
    </form>
</page-body>